extends ../layouts/print

block content
	//div.print-preview
	//	p WOhoow
	div
		table(width='100%')
			each representation in data.representationsById
				thead
					tr
						th(colspan=3) 
							h2 #{representation.document.title}
					tr
						th Beoordelaar
						th Positief
						th Negatief
				tbody
					each item in data.feedbackByRepresentation[representation._id]
						tr
							td(width='140px') beoordelaar-#{item.author._rid}
							td #{item.positive}
							td #{item.negative}
block js
	script.
		window.addEventListener('load', function() {
			window.print();
		});
